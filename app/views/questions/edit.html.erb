<% provide(:title, 'Edit this question') %>
<h1>Edit this Question</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@question) do |f| %>
        <%#= render 'shared/error_messages' %>
            <%= f.label :question %>
            <%= f.text_field :question, class: 'form-control' %>

            <ul>
              <% @question.answers.each do |q| %>
              <li class = checkbox inline>
                <%= check_box_tag 'answers_bodies[]', q.id %>
                <%= q.answer_body %>
              </li>
              <% end %>
            </ul>

            <%= f.label :subject %>
            <%= f.text_field :subject.downcase, class: 'form-control'  %>
            <br><br>

            <%= f.submit "Update this question", class: "btn btn-primary" %>

        <% end %>
    </div>
</div>
