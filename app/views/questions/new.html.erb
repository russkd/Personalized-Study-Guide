<% provide(:title, 'Build the Question') %>
<h1>Build a Question</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@question) do |f| %>
        <%#= render 'shared/error_messages' %>
            <%= f.label :question %>
            <%= f.text_field :question, class: 'form-control', placeholder: "Enter the Question" %>
            <br>
            <%= f.label :subject %>
            <%= f.text_field :subject.downcase, class: 'form-control', placeholder: "Enter the Subject"  %>
            <h2>Possible Answers</h2>
            <ul>
              <% @answers.each do |x| %>
              <li class = checkbox inline>
                <%= check_box_tag 'answers_bodies[]', x.id %>
                <%= x.answer_body %>
              </li>
              <% end %>
            </ul>


            <%= f.submit "Add a question", class: "btn btn-primary" %>

        <% end %>

        <br>
          <h2>Search Answers by Subject</h2>

            <%= form_tag(new_question_path, :method => "get", id: "search-form") do %>
              <%= text_field_tag :search, params[:search], placeholder: "Search Answers" %>
              <%= submit_tag "Search", :name => nil %>
            <% end %>
    </div>
</div>
